
<label class="label"><%= t("activerecord.attributes.task.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</label>
<p><%= @task.name %></p>

<label class="label"><%= t("activerecord.attributes.task.deadline", :default => t("activerecord.labels.deadline", :default => "Deadline")) %>:</label>
<p><%= distance_of_time_in_words(Time.now, @task.deadline) %></p>
<label class="label"><%= t("activerecord.attributes.task.notes", :default => t("activerecord.labels.notes", :default => "Notes")) %>:</label>
<p><%= @task.notes %></p>

<label class="label"><%= t("activerecord.attributes.task.quadrant_id", :default => t("activerecord.labels.quadrant_id", :default => "Quadrant")) %>:</label>
<p><%= @task.quadrant.quadname %></p>

<label class="label"><%= t("activerecord.attributes.task.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</label>
<p><%= @task.user.first_name %> <%= @task.user.last_name %></p>

<div class="form-actions">
<%= link_to "Back", tasks_path, :class => 'btn'  %>
<%= link_to "Edit", edit_task_path(@task), :class => 'btn' %>
<%= link_to "Delete", task_path(@task), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
