<header>
	<div id="priorityquads">
  		<h1>Priority Quadrants</h1>
		Read more here:<%= link_to "http://sidsavara.com/personal-development/nerdy-productivity-coveys-time-management-matrix-illustrated-with-xkcd-comics", "http://sidsavara.com/personal-development/nerdy-productivity-coveys-time-management-matrix-illustrated-with-xkcd-comics" %> |
  <%= link_to "http://www.keenerliving.com/reviewing-coveys-4-quadrants", "http://www.keenerliving.com/reviewing-coveys-4-quadrants" %> |
  	<%= link_to "http://en.wikipedia.org/wiki/First_Things_First_(book)", "http://en.wikipedia.org/wiki/First_Things_First_(book)" %> |
  	<%= link_to "http://www.dkeener.com/keenstuff/priority.html", "http://www.dkeener.com/keenstuff/priority.html" %>|
	</div>
</header>

<div class="quadwrap">
	<!-- Urgent and Important Quadrant -->
	<div class="quadbox" id="fires">
		
		<div>
			<h2 style="float:left;margin-right:10px;">Fires</h2> 
			<a class="btn" data-toggle="modal" href="#myModal" style="margin-top:4px;">New+</a>
		</div>
		
		<div class="tablewrap">
		<table class="table table-striped table-bordered table-condensed">
	 		<thead>
	  			<tr>
	    			<th>Task</th>
	    			<th>Time Left</th>
	  			</tr>
	  		</thead>
	  		<tbody>
	  		<% @fires.each do |task| -%>
	   			<tr>
	    			<td><%= link_to task.name, task_path(task) %></td>
	    			<td><%= distance_of_time_in_words(Time.now, task.deadline) %></td>
	    		</tr>
	    	<% end -%>
	   		</tbody>
		</table>
		</div>

	</div>
	
	<!-- Not-Urgent and Important Quadrant -->
	<div class="quadbox" id="production">
		
		<div>	
			<h2 style="float:left;margin-right:10px;">Production</h2>
			<a class="btn" data-toggle="modal" href="#myModal" style="margin-top:4px;">New+</a>
		</div>
		
		<div class="tablewrap">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
	  			<tr>
	    			<th>Task</th>
	    			<th>Time Left</th>
	  			</tr>
	  		</thead>
	  		<tbody>
	  		<% @production.each do |task| -%>
	   			<tr>
	    			<td><%= link_to task.name, task_path(task) %></td>
	    			<td><%= distance_of_time_in_words(Time.now, task.deadline) %></td>
	    		</tr>
	    	<% end -%>
	   		</tbody>
		</table>
		</div>
		
	</div>
	
	<!-- Urgent and Not-Important Quadrant -->
	

	<div class="quadbox" id="requirements">
		
		<div>
			<h2 style="float:left;margin-right:10px;">Required</h2>
			<a class="btn" data-toggle="modal" href="#myModal" style="margin-top:4px;">New+</a>
		</div>
		
		<div class="tablewrap">
		<table class="table table-striped table-bordered table-condensed">
	 		<thead>
	  			<tr>
	    			<th>Task</th>
	    			<th>Time Left</th>
	  			</tr>
	  		</thead>
	  		<tbody>
	  		<% @requirements.each do |task| -%>
	   			<tr>
	    			<td><%= link_to task.name, task_path(task) %></td>
	    			<td><%= distance_of_time_in_words(Time.now, task.deadline) %></td>
	    		</tr>
	    	<% end -%>
	   		</tbody>
		</table>
		</div>
	
	</div>
	
	<!-- Instead of Not-Urgent and Not-Important Quadrant... -->
	<!-- Let's put a Quadrant for Personal Goals -->

	<div class="quadbox" id="goals">
		
		<div>
			<h2 style="float:left;margin-right:10px;">Goals</h2>
			<a class="btn" data-toggle="modal" href="#myModal" style="margin-top:4px;">New+</a>
		</div>
		
		<div class="tablewrap">
		<table class="table table-striped table-bordered table-condensed">
	 		<thead>
	  			<tr>
	    			<th>Task</th>
	    			<th>Time Left</th>
	  			</tr>
	  		</thead>
	  		<tbody>
	  		<% @goals.each do |task| -%>
	   			<tr>
	    			<td><%= link_to task.name, task_path(task) %></td>
	    			<td><%= distance_of_time_in_words(Time.now, task.deadline) %></td>
	    		</tr>
	    	<% end -%>
	   		</tbody>
		</table>
		</div>
	
	</div>
	
</div>

<div class="modal" id="myModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>New Task!</h3>
  </div>
  <div class="modal-body">
    <%= render 'newtask' %>
  </div>
</div>

