
<div class="clearfix">
   <%= f.label :name, t("activerecord.attributes.subtask.name", :default => "Name"), :class => :label %>
  <div class="input">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :deadline, t("activerecord.attributes.subtask.deadline", :default => "Deadline"), :class => :label %>
  <div class="input">
    <%= f.datetime_select :deadline, :class => 'datetime_select' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :notes, t("activerecord.attributes.subtask.notes", :default => "Notes"), :class => :label %>
  <div class="input">
    <%= f.text_field :notes, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :task_id, t("activerecord.attributes.subtask.task_id", :default => "Task"), :class => :label %>
  <div class="input">
    <%= f.number_field :task_id, :class => 'number_field' %>
  </div>
</div>
<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", subtasks_path %>
</div>
